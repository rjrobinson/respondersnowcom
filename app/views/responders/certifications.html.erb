<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-sm-4">
    <h2>Certifications</h2>
    <ol class="breadcrumb">
      <li>
        <a href="<%= url_for :controller => 'dashboards', :action => 'dashboard_1' %>">Profile</a>
      </li>
      <li class="active">
        <strong> Certifications</strong>
      </li>
    </ol>
  </div>
</div>
<div class="wrapper wrapper-content  animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <!---->
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h5 class="panel-title">Documents</h5>
        </div>
        <div class="panel-body">
          <% unless current_responder.aquired_certifications %>
            <h1>No Documents / No Certifications</h1>
          <% else %>
            <table class="table table-striped table-bordered table-hover dataTables-example">
              <thead>
              <tr>
                <th>Name</th>
                <th>Date Aquired</th>
                <th class="text-center">
                  <div class="btn-group">
                    <%= link_to '/', class: 'btn btn-success btn-xs btn-outline' do %>
                      <i class="fas fa-download"></i> Download All
                    <% end %>
                    <%= link_to '/', class: 'btn btn-danger btn-xs btn-outline',
                                method: :delete,
                                confirm: 'Are you sure you want to delete this?' do %>
                      <i class="fa fa-trash"></i> Delete All
                    <% end %>
                  </div>
                </th>
              </tr>
              </thead>
              <tbody>
              <% current_responder.aquired_certifications.each do |cert| %>
                <tr class="gradeX">
                  <td><%= cert.certification.name %></td>
                  <td><%= cert.aquired_on %></td>
                  <td class="text-center">
                    <div class="btn-group">
                      <%= link_to cert.document.url, class: 'btn btn-info btn-sm btn-outline' do %>
                        <i class="far fa-file-pdf"></i> PDF
                      <% end %>
                      <%= link_to aquired_certification_path(cert.id), class: 'btn btn-sm btn-danger btn-outline',
                                  method: :delete,
                                  confirm: 'Are you sure you want to delete this?' do %>
                        <i class="fa fa-trash"></i>
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
              </table>
          <% end %>
        </div>
      </div>
      <!---->
    </div>
  </div>
</div>