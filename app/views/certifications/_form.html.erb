<%= simple_form_for :new_cert,
                    url: acquired_certifications_path,
                    method: :post,
                    defaults: {inner_html: 'form-control'} do |f| %>
  <% if primary %>
    <%= f.input :certification, collection: Certification.primaries %>
  <% else %>
    <%= f.input :certification, collection: Certification.secondary %>
  <% end %>
  Are we missing a certification or course ? click <%= link_to "here", new_certification_path %>
  <%= f.input :state, collection: us_states %>
  <%= f.input :number %>
  <div class="form-group">
    <%= f.input :aquired_on, as: :date, start_year: Date.today.year - 50,
                end_year: Date.today.year, discard_day: true,
                order: [:month, :year], label: 'Aquired On', id: 'wh-end-date' %>

    <%= f.input :expires,
                label: "Does this Expire ?",
                id: 'does-it-exipre',
                as: :select,
                selected: false,
                checked_value: "NO",
                unchecked_value: "YES" %>


    <%= f.input :expires_on, as: :date, start_year: Date.today.year + 10, end_year: Date.today.year,
                discard_day: true, order: [:month, :year], label: 'Expires On', id: 'wh-end-date expires-date', inner_html: 'hidden',
                required: false
    %>
    <div>

      <%= f.input :file, as: :file, required: false, inner_html: 'btn btn-default btn-block btn-file' %>
      <%= f.submit "Save", class: 'btn btn-success center-btn' %>

<% end %>
<script type="text/javascript" charset="utf-8">
    $('.new_cert_expires_on').toggleClass('hidden');

    $('.new_cert_expires').change(function () {
        $('.new_cert_expires_on').toggleClass('hidden');
    });
</script>