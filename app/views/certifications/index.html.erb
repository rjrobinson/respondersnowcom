<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>List Of Certifications</h2>
    <ol class="breadcrumb">
      <li>
        <a href="<%= url_for :controller => 'dashboards', :action => 'dashboard_1' %>">Home</a>
      </li>
      <li>
        <a>Certificates</a>
      </li>
      <li class="active">
        <strong>Index</strong>
      </li>
    </ol>
  </div>
</div>


<div class="row">
  <div class="col-lg-12">
    <table class="table table-striped table-bordered table-hover dataTables-example">
      <tr>
        <th>Name</th>
        <th>Code</th>
        <th>Primary</th>
        <th>Abbvr</th>
        <th>Logo</th>
        <th></th>
      </tr>
      <% @certifications.each do |cert| %>
        <tr>
          <td><%= cert.name %></td>
          <td><%= cert.course_code %></td>
          <td><%= cert.primary %></td>
          <td><%= cert.abbvr if cert.abbvr %></td>
          <td>
            <% if cert.logo %>
              <img alt="image" style="max-width: 35px" src="<%= image_path(cert.logo) %>">
            <% else %>
              <p>No Logo"</p>
            <% end %>
          </td>
          <td>
            <button>Edit</button>
            <button>Destroy</button>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>